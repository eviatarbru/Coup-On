<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditScreenTextInputLayoutStyleLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/textInputLayoutLight</item>
        <item name="colorControlActivated">@color/textInputLayoutLight</item>
        <item name="colorControlHighlight">@color/textInputLayoutLight</item>
        <item name="colorAccent">@color/textInputLayoutLight</item>
        <item name="android:textColorHint">#80000000</item>
        <item name="android:textColor">@color/textInputLayoutLight</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">#BEFFFFFF</item>
        <item name="android:textColor">@color/textInputLayout</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
