<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shashank.platform.coup_on">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup">
        <activity
            android:name="com.coupOn.platform.coupOn.ChatMessage.ChatScreen"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.AddCouponImage"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.addCoupon"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.Profile_screen"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.InterestsScreen"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.SwipeCards"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.ForgotPasswordScreen"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.ChangePasswordScreen"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.coupOn.platform.coupOn.LoginScreen"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>